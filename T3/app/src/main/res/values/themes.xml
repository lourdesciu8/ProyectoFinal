<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base sin ActionBar con Material3 y tonos azulados -->
    <style name="Base.Theme.Navegacion" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Colores principales -->
        <item name="colorPrimary">@color/colorApp</item>                <!-- #4FA7D3 -->
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/primaryLight</item>         <!-- #7EC6E3 -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Fondo y superficies -->
        <item name="colorSurface">@color/background</item>             <!-- #F2F8FC -->
        <item name="colorOnSurface">@color/colorTextPrimary</item>

        <!-- Fondo global -->
        <item name="android:colorBackground">@color/colorBackground</item> <!-- #F2F8FC -->
        <item name="colorOnBackground">@color/colorTextPrimary</item>

        <!-- Errores y alertas -->
        <item name="colorError">@color/red</item>                      <!-- #FF7C7C -->
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- Estilo general para los botones de la app -->
    <style name="BotonApp" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorApp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:elevation">4dp</item>
    </style>

    <!-- Tema global de la app que aplica el estilo de botÃ³n -->
    <style name="Theme.Navegacion" parent="Base.Theme.Navegacion">
        <item name="buttonStyle">@style/BotonApp</item>
    </style>

</resources>

