<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema base con Material3 -->
    <style name="Base.Theme.Navegacion" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Aquí van tus atributos de colorPrimary, etc. -->
    </style>

    <!-- Tu estilo de botón -->
    <style name="BotonApp" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/colorApp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Tema principal que hereda de Base y aplica BotonApp -->
    <style name="Theme.Navegacion" parent="Base.Theme.Navegacion">
        <!-- Aplica tu style BotonApp a todos los <Button> -->
        <item name="buttonStyle">@style/BotonApp</item>
    </style>

</resources>
