<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_home_gradient"
    android:padding="32dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/logoApp"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:src="@drawable/logo_transparente"
        android:layout_marginBottom="28dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Introduce tu correo para recuperar la contraseña"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/editCorreoRecuperacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo electrónico"
        android:inputType="textEmailAddress"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnEnviarRecuperacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar correo de recuperación"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/colorApp"
        android:textColor="@android:color/white"/>
</LinearLayout>
